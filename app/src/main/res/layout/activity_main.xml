<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/download1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progress"
        android:layout_margin="5dp"
        android:progress="1"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/d1_tv"
        android:textAlignment="center"
        android:text="1%"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/d1_btn"
        android:layout_below="@id/download1"
        android:text="下载"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/d1_cancel"
        android:layout_below="@id/d1_btn"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/download2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progress"
        android:layout_margin="5dp"
        android:progress="1"
        android:max="100"
        android:layout_below="@id/d1_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/d2_tv"
        android:textAlignment="center"
        android:layout_below="@id/d1_cancel"
        android:text="1%"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/d2_btn"
        android:layout_below="@id/download2"
        android:text="下载"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/d2_cancel"
        android:layout_below="@id/d2_btn"
        android:text="取消"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>